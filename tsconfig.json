{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2020",
        "allowJs": true,
        "sourceMap": true,
        "inlineSources": true,
        "esModuleInterop": true,
        "strict": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "incremental": true,
        "stripInternal": true,
        "outDir": "./dist"
    },
    "include": [
        "./src"
    ],
    "exclude": [
        "node_modules"
    ]
}